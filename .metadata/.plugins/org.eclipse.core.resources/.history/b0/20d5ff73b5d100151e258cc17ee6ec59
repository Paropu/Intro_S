import java.io.*;
import java.net.*;

public class Cliente {
	public Cliente(InetAddress dirIP, Integer puerto){
		try{
			System.out.println("\n\n\n\t-------------------- CLIENTE --------------------");
			System.out.println("\n\n\t>>> IP Local: ");
		System.out.println("\n\n\n>>> Conectando al servidor:\n\t\tIP: "+dirIP+"\n\t\t>>> Puerto: "+puerto);
			Socket socketCliente = new Socket (dirIP, puerto);
			
			
			BufferedReader flujoEntrada = new BufferedReader (new InputStreamReader(socketCliente.getInputStream()));

			
			System.out.println("\n\t>>> Host conectado al servidor: "+ socketCliente.getRemoteSocketAddress());
			for(;;)System.out.println(flujoEntrada.readLine());
		} catch(Exception e) {
			System.out.println(e.getMessage());
		}
	}
}

