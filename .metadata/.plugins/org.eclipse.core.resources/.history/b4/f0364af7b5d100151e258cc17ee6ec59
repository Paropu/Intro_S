import java.io.*;
import java.net.*;

public class Cliente {
	public Cliente(InetAddress dirIP, Integer puerto){
		try{
			System.out.println("\n\n\t-------------------- CLIENTE --------------------");
			System.out.println("\n\t>>> IP Local: ");
		System.out.println("\n\n\t>>> Conectando al servidor:\n\t\tIP: "+dirIP+"\n\t\tPuerto: "+puerto);
			Socket socketCliente = new Socket (dirIP, puerto);	
			BufferedReader flujoEntrada = new BufferedReader (new InputStreamReader(socketCliente.getInputStream()));
			System.out.println("\n\t>>> ConexiÃ³n realizada correctamente");
			System.out.println("\n>>> Recibiendo servicio:");
			for(;;)System.out.println("\t"+flujoEntrada.readLine());
		} catch(Exception e) {
			System.out.println(e.getMessage());
		}
	}
}

